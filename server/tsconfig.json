{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }

    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./**/*.ts"
    ]
}